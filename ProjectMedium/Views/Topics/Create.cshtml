@model ProjectMedium.Models.DataAccess.Entitites.Topic

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-1"></div>
    <div class="col-10 col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
        <h1>Topic Adding Page</h1>

        <h1>       @ViewBag.Errorbydem12        </h1>

        <hr />
        <div class="row">
            <div class="col-md-4 mx-auto text-center">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TopicName" class="control-label"></label>
                        <input asp-for="TopicName" class="form-control" />
                        <span asp-validation-for="TopicName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
    <div class="col-1"></div>
</div>