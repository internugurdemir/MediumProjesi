@model ProjectMedium.Models.DataAccess.Entitites.Note


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="ReadNote">


            <input type="hidden" asp-for="NoteID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="height:400px; width:100%">
                <label asp-for="Content" class="control-label"></label>
                <textarea style="height:400px;" asp-for="Content" class="form-control">@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>

</div>

<div class="progress-bar">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
